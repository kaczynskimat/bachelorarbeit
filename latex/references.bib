author = {Zhong, Ge and Hengartner, Urs},
title = {Toward a distributed k-anonymity protocol for location privacy},
year = {2008},
isbn = {9781605582894},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1456403.1456410},
