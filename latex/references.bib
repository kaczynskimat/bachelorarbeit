@article{SmartMetersApplications,
title = {A comprehensive systematic and bibliometric review of technologies and measurement tools for power quality events detection, classification, and fault location in smart grids},
journal = {Renewable and Sustainable Energy Reviews},
volume = {226},
pages = {116302},
year = {2026},
issn = {1364-0321},
doi = {https://doi.org/10.1016/j.rser.2025.116302},
url = {https://www.sciencedirect.com/science/article/pii/S136403212500975X},
author = {Mohammad Rasoulnia and Elnaz Yaghoubi and Elaheh Yaghoubi and Akhtar Hussain and Innocent Kamwa},
keywords = {Measurement tools, Bibliometric-analysis, Power quality events, Smart grid, Technology devices},
abstract = {Integrating inverter-based resources (IBRs) into smart grids (SGs) introduces new technical challenges for power quality (PQ) maintenance as well as fault detection and system reliability. Several recent studies have explored various aspects of SGs to enhance power quality, as well as fault detection, localization, and classification. However, several factors still require further improvement. This review paper employs systematic review and bibliometric analysis to examine advanced SG technologies such as automatic voltage regulation (AVR), advanced metering infrastructure (AMI), automatic generation control (AGC), and wide area measurement systems (WAMS) before comparing their effectiveness at addressing operational problems such as voltage regulation as well as outage management and data processing. The study examines measurement tools such as phasor measurement units (PMUs), smart meters (SMs), digital measurement units (DMUs), and waveform measurement units (WMUs) to understand their roles in PQ events detection, classification, and location identification. Research trends and emerging technologies along with current research gaps were identified through a bibliometric study of peer-reviewed articles from Web of Science (2013–2024) using VOS Viewer visualization techniques. A combined analysis delivers an integrated view that shows how smart grid innovations and measurement solutions boost monitoring capabilities while simultaneously improving event analysis and grid resilience in contemporary power systems.}
}


